<!-- Исключить тесты -->
<Match>
  <Class name="~.*Test(s)?$" />
</Match>

<!-- Spring @Autowired поля инициализирует Spring, не SpotBugs -->
<Match>
  <BugPattern name="NP_ALWAYS_NULL" />
  <Annotation name="org.springframework.beans.factory.annotation.Autowired" />
</Match>

<!-- JPA @Entity - Hibernate управляет инициализацией -->
<Match>
  <BugPattern name="NP_UNWRITTEN_PUBLIC_OR_PROTECTED_FIELD" />
  <Annotation name="javax.persistence.Entity" />
</Match>

<!-- DTO классы -->
<Match>
  <Class name="~.*DTO$|~.*Dto$" />
  <BugPattern name="EI_EXPOSE_REP" />
</Match>
